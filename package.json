    "@types/archiver": "^6.0.3",
    "@types/handlebars": "^4.0.40",
    "@types/qrcode": "^1.5.5",
    "@types/web-push": "^3.6.4",
    "archiver": "^7.0.1",
    "bcryptjs": "^2.4.3",
    "bull": "^4.11.5",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "ioredis": "^5.6.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pdfkit": "^0.17.1",
    "pino": "^8.21.0",
    "pino-pretty": "^10.3.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.33.5",
    "socket.io": "^4.6.0",
    "speakeasy": "^2.0.0",
    "stripe": "^14.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1",
